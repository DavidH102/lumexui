@namespace LumexUI.Grid
@typeparam TGridItem
@inherits ColumnBase<TGridItem>

@{
	base.BuildRenderTree( __builder );
}

@code {
	protected override void RenderHeaderCellContent(RenderTreeBuilder __builder)
	{
		<span class="column-header">
			@if (Sortable.HasValue ? Sortable.Value : IsSortableByDefault())
			{
				<span class="column-header--sortable" @onclick="@(() => Grid.SortByColumnAsync(this))">
					@Title
					<LumexIconButton Icon="@Icons.Rounded.ArrowUpwardAlt" OnClick="@(() => Grid.SortByColumnAsync(this))" />
				</span>
			}
			else
			{
				@Title
			}
		</span>
	}

	protected override void RenderCellContent( RenderTreeBuilder __builder, CellBase<TGridItem> cell )
	{
		@Template?.Invoke( cell.Item )
	}
}
