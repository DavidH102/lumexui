@namespace LumexUI.Grid
@typeparam TGridItem
@inherits ColumnBase<TGridItem>

@{
	base.BuildRenderTree( __builder );
}

@code {
	protected override void RenderHeaderCellContent( RenderTreeBuilder __builder )
	{
		if( Grid.SelectionMode != GridSelectionMode.Single )
		{
			<LumexCheckbox CheckboxClass="@CheckboxClass" Value="@AllSelected" ValueChanged="@SelectAll" />		
		}
	}

	protected override void RenderCellContent( RenderTreeBuilder __builder, CellBase<TGridItem> cell )
	{
		if( cell is CheckboxCell<TGridItem> checkboxCell )
		{
			<LumexCheckbox CheckboxClass="@CheckboxClass" Value="@checkboxCell.Selected" ValueChanged="@checkboxCell.SelectAsync" />
		}
	}
}
