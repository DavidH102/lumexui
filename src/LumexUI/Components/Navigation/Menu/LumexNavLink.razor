@namespace LumexUI
@inherits LumexComponentBase

<li @attributes="@AdditionalAttributes" class="@RootClass" style="@RootStyle">
    <NavLink class="@NavLinkCssClass" href="@Route" Match="@Match" ActiveClass="@ActiveClass">
        @if( !string.IsNullOrEmpty( Icon ) )
        {
            <LumexIcon Icon="@Icon" Size="@Size.Small" />
        }
        @ChildContent
    </NavLink>
</li>

@code {
    /// <summary>
    /// Specifies a child contents of this instance.
    /// </summary>
    [Parameter] public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Specifies a value representing the URL route to be navigated to.
    /// </summary>
    [Parameter] public string Route { get; set; } = "#";

    /// <summary>
    /// Specifies a value representing the URL matching behavior.
    /// </summary>
    /// <remarks>Default value is <see cref="NavLinkMatch.All"/></remarks>
    [Parameter] public NavLinkMatch Match { get; set; } = NavLinkMatch.All;

    /// <summary>
    /// Specifies a CSS class name applied to the NavLink when the
    /// current route matches the NavLink href.
    /// </summary>
    [Parameter] public string ActiveClass { get; set; } = Constants.ComponentStates.Active;

    /// <summary>
    /// Specifies a CSS class name of an icon that will be placed next to the menu option text.
    /// </summary>
    [Parameter] public string? Icon { get; set; }

    protected override string RootClass =>
        new CssBuilder( "lumex-nav-item" )
            .AddClass( base.RootClass )
        .Build();

    private string NavLinkCssClass =>
        new CssBuilder( "lumex-nav-link" )
        .Build();
}
