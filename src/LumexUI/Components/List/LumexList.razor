@namespace LumexUI
@inherits LumexComponentBase

<ul @attributes="@AdditionalAttributes" class="@RootClass" style="@RootStyle">
	@ChildContent
</ul>

@code {
	/// <summary>
	/// Defines the content to be rendered inside the list.
	/// </summary>
	[Parameter] public RenderFragment? ChildContent { get; set; }

	protected override string RootClass =>
		new CssBuilder( "lumex-list" )
			.AddClass( base.RootClass )
		.Build();
}
