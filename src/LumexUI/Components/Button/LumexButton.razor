@namespace LumexUI
@inherits LumexComponentBase

<LumexComponent As="@As"
                Class="@RootClass"
                Style="@RootStyle"
                type="@Type.ToDescription()"
                disabled="@Disabled"
                data-disabled="@Disabled.ToAttributeValue()"
                @attributes="@AdditionalAttributes"
                @onclick="@OnClickAsync">
    @StartContent
    @ChildContent
    @EndContent
</LumexComponent>
