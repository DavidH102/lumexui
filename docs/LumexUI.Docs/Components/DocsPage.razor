@namespace LumexUI.Docs.Components

<CascadingValue TValue="DocsPage" Value="@this" IsFixed="@true">
    @ChildContent
</CascadingValue>

<DocsPageFooter />

<DocsPageTableOfContents Sections="@_collectedSections" />

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }

    private ICollection<PageSectionInfo> _collectedSections = new List<PageSectionInfo>();

    internal void AddSection( PageSectionInfo sectionInfo )
    {
        _collectedSections.Add( sectionInfo );
    }
}
