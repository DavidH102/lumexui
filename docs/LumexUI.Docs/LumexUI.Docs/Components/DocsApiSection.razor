@namespace LumexUI.Docs.Components
@inject NavigationManager NavigationManager

<LumexDivider />
<DocsSection Title="API">
    <p>
        See the API references below for a complete guide to all the
        parameters available for the components mentioned here.
    </p>
    <ul>
        @foreach( var reference in References )
        {
            <li>
                <LumexNavLink Href="@($"{NavigationManager.BaseUri}docs/api/{reference}")"
                              Class="border-none text-orange-500 text-xs font-normal">
                    <span class="px-1 py-0.5 rounded-md ring-1 ring-orange-200 bg-orange-50">
                        @($"<{reference} />")
                    </span>
                </LumexNavLink>
            </li>
        }
    </ul>
</DocsSection>

@code {
    [Parameter, EditorRequired] public string[] References { get; set; } = default!;
}
