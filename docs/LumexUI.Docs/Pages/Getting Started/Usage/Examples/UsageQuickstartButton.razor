<LumexButton Color="@ThemeColor.Primary"
             Variant="@Variant.Flat"
             Size="@Size.Medium"
             OnClick="@HandleClick">
    Hello World @(CounterLabel)
</LumexButton>

@code {
    private int _counter;
    private string? CounterLabel => _counter > 0 ? $"x {_counter}" : default;

    private void HandleClick()
    {
        _counter++;
    }
}
